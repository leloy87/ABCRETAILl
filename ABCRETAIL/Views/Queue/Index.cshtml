@{
    ViewBag.Title = "Queue Storage";
}

<h2 style="color: #333; font-family: Arial, sans-serif;">Queue Storage</h2>

<!-- Form to send a message to the queue -->
<form asp-controller="Queue" asp-action="SendMessage" method="post" style="margin-bottom: 20px;">
    <label for="message" style="font-family: Arial, sans-serif; font-size: 16px;">Message:</label>
    <input type="text" id="message" name="message" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; width: 300px; margin-right: 10px;" />
    <button type="submit" style="padding: 8px 16px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">Send Message</button>
</form>

<hr style="border: 0; height: 1px; background-color: #ccc; margin: 20px 0;" />

<!-- Form to receive a message from the queue -->
<form asp-controller="Queue" asp-action="ReceiveMessage" method="get">
    <button type="submit" style="padding: 8px 16px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">Receive Message</button>
</form>

<!-- Display received message if available -->
@if (ViewBag.Message != null)
{
    <div style="margin-top: 20px; background-color: #f8f9fa; padding: 15px; border-radius: 4px;">
        <h4 style="color: #333; font-family: Arial, sans-serif;">Received Message:</h4>
        <p style="font-family: Arial, sans-serif; font-size: 16px; color: #555;">@ViewBag.Message</p>
    </div>
}

